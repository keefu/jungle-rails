<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id%></h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
      <tbody>
      <%= render partial: "item", locals: {products: @order.products} %>
        <h2><div>Total $<%=(@order.total_cents) / 100.00 %></div></h2>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= (@order.total_cents) / 100.00 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email%></h4>
  </div>
</section>

