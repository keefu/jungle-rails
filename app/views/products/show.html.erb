<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name:</dt>
          <dd><%= @product.name %></dd>
          <dt>Description:</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity:</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price:</dt>
          <dd><%= number_to_currency(@product.price) %></dd>
          <dt>Average Rating:</dt>
          <% if @average.to_i == 0 %> 
          <dd>This product has not been rated yet.</dd>
          <% else %>
            <dd><%= @average.to_i %>/5</dd>
          <% end %>
        </dl>
      </div>
    </div>
    <%= render 'reviews' %>
    <h3 class="page-header"> Reviews: </h3>
    <br/>
    <% @reviews.each do |review| %>
      <%= render 'ratings', rating: review.rating, description: review.description, user: review.user_id, created_at: review.created_at  %>
    <% end %>
  </article>
</section>
