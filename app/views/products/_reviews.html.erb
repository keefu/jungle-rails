<dl class="dl-horizontal">
<% if current_user %>
  <dd><h3>Review your <%="#{@product.name}"%></h3></dd>
  <%= form_for :review, url: "#{@product.id}/reviews" do |f| %>
    <dd><textarea class="form-control" rows="3" <%= f.text_area :description %><br/></textarea></dd>
    <div class="dropdown">
      <dd><p>Scale</p><%= f.select :rating, [1, 2, 3, 4, 5] %></dd>
      <br/>
      <br/>
    </div>
  <div class="form-group">
    <div class="col-sm-10">
    <dd><button type="submit" class="btn btn-default"<%= f.submit "Submit" %>Sumbit Review</button></dd>
    </div>
  </div>
</dl>
  <% end %>
<% else %>
  <h3>You need to login to leave a review.<h3>
<% end %>